<!DOCTYPE HTML>
<html lang="pt-br">
	<head>
		<meta charset="UTF-8">

		<title>Portal de notícias</title>
		
		<!-- JQuery -->
		<script src="js/jquery-2.2.1.js"></script>

		<!-- bootstrap - link cdn -->
		<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/css/bootstrap.min.css" integrity="sha384-1q8mTJOASx8j1Au+a5WDVnPi2lkFfwwEAa8hDDdjZlpLegxhjVME1fgjWPGmkzs7" crossorigin="anonymous">
	
		<!-- incluindo css -->
		<link href="css/style.css" rel="stylesheet">

		<!-- favicon -->
		<link rel="shortcut icon" href="images/favicon.ico" />
	</head>

	<body>

		<nav class="navbar navbar-default navbar-static-top">
			<div class="container">
				<div class="navbar-header">
					<button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar">
						<span class="sr-only">Toggle navigation</span>
						<span class="icon-bar"></span>
						<span class="icon-bar"></span>
						<span class="icon-bar"></span>
					</button>
					
					<img src="images/logo.png" />
				</div>

				<div id="navbar" class="navbar-collapse collapse">
					<ul class="nav navbar-nav navbar-right">
						<li><a href="index.ejs">HOME</a></li>
					</ul>
				</div>
			</div>
		</nav>


	    <div class="container">
	    	<div class="row">
	    		<div class="col-md-8">
	    			<div class="noticia_wrapper">
		    			<span class="noticia_autor"><%=json5UltimasNoticias[0].AUTOR%></span>
		    			<a href="noticia?id_noticia=<%=json5UltimasNoticias[0].ID_NOTICIA%>" class="noticia_titulo"><%=json5UltimasNoticias[0].TITULO%></a>
		    			<span class="noticia_data"><%=json5UltimasNoticias[0].DATA_NOTICIA%></span>
		    			<br />
		    			<p class="noticia_resumo">
		    				<%=json5UltimasNoticias[0].RESUMO%>
		    			</p>
		    		</div>
		    	</div>

	    		<div class="col-md-4">
	    			<div class="noticia_wrapper">
		    			<span class="noticia_autor"><%=json5UltimasNoticias[1].AUTOR%></span>
		    			<a href="noticia?id_noticia=<%=json5UltimasNoticias[1].ID_NOTICIA%>" class="noticia_titulo"><%=json5UltimasNoticias[1].TITULO%></a>
		    			<span class="noticia_data"><%=json5UltimasNoticias[1].DATA_NOTICIA%></span>

		    			<br />
		    			<p class="noticia_resumo">
		    				<%=json5UltimasNoticias[1].RESUMO%>
		    			</p>
		    		</div>
		    	</div>
	    	</div>

	    	<div class="row">
				<% for(var i = 2; i < json5UltimasNoticias.length; i++){ %>
					<div class="col-md-4">
						<div class="noticia_wrapper">
								<span class="noticia_autor"><%=json5UltimasNoticias[i].AUTOR%></span>
								<a href="noticia?id_noticia=<%=json5UltimasNoticias[i].ID_NOTICIA%>" class="noticia_titulo"><%=json5UltimasNoticias[i].TITULO%></a>
								<span class="noticia_data"><%=json5UltimasNoticias[i].DATA_NOTICIA%></span>
		
								<br />
								<p class="noticia_resumo">
									<%=json5UltimasNoticias[i].RESUMO%>
								</p>
							</div>
					</div>
				<% } %>
	    	</div>

	    	<div class="row ver_mais">
	    		<button type="button" class="btn btn-default"><a href="noticias.ejs">Ver todas as notícias</a></button>
	    	</div>

	    </div>
	
		<script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/js/bootstrap.min.js" integrity="sha384-0mSbJDEHialfmuBBQP6A4Qrprq5OVfW37PRR3j5ELqxss1yVqOtnepnHVP9aJ7xS" crossorigin="anonymous"></script>
	
	</body>
</html>